@using MovieProDemo.Models.ViewModels;
@model LandingPageVM;
@{
    ViewData["Title"] = "Movie Pro";
}

<style>
    .clampTitle{
        display:-webkit-box;
        -webkit-box-orient:vertical;
        -webkit-line-clamp: 2;
        overflow:hidden;
    }
    .clampOverview{
        display:-webkit-box;
        -webkit-box-orient:vertical;
        -webkit-line-clamp:4;
        overflow:hidden;
    }
    h5.card-title{
        height: 2.5em;
    }
    img{
        height:500px;
    }
</style>
<section class="px-4">
    <div class="row">
        <span class="btn btn-warning font-weight-bolder w-100">UPCOMING</span>
    </div>
    <div class="row">
        <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                @{
                    var classActive = "active";
                    for (int slide = 0; slide <= 3; slide++)
                    {
                        <div class="carousel-item @classActive">
                            <div class="row">
                                @foreach (var movie in Model.Upcoming.results.Skip(slide * 4).Take(4))
                                {
                                    <div class="col-sm-3 mb-2">
                                        <div class="card" style="width: 18rem;">
                                            <img src="@movie.poster_path" class="card-img-top" alt="...">
                                            <div class="card-body">
                                                <h5 class="card-title clampTitle">@movie.title</h5>
                                                <p class="card-text clampOverview">@movie.overview</p>
                                                <a class="btn btn-warning font-weight-bold w-100" asp-action="Details" asp-controller="Movies" asp-route-id="@movie.id">Details</a>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                        classActive = "";
                    }
                }

            </div>
        </div>

    </div>

</section>




